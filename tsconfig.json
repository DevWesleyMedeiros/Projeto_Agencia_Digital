{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,                 
      "allowSyntheticDefaultImports": true       
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts"
    ]
}
  
